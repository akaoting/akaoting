{
  "name": "akaoting",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "build": "rm -rf ./build && swc ./src -d ./build --copy-files",
    "build:watch": "npm run build -- --watch --config-file .swcrcdev",
    "build:tailwind": "npx @tailwindcss/cli -i ./src/input.css -o ./src/output.css",
    "build:tailwind:watch": "npm run build:tailwind -- --watch",
    "start": "pear run .",
    "dev:start": "RUN_ENV=dev pear run -d .",
    "dev:watch": "concurrently --kill-others --kill-others-on-fail \"npm run build:tailwind:watch\" \"npm run build:watch\" \"npm run dev:start\"",
    "dev": "npm run dev:watch"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.5",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "pear-hotmods": "^1.0.3",
    "pear-interface": "^1.0.3",
    "react-refresh": "^0.16.0",
    "tailwindcss": "^4.0.9"
  },
  "pear": {
    "name": "akaoting",
    "gui": {
      "backgroundColor": "#1F2430",
      "height": "540",
      "width": "720"
    }
  }
}
